<p id="notice"><%= notice %></p>

<h1>Bookseries</h1>

<table>
  <thead>
    <tr>
      <th>Book</th>
      <th>Series</th>
      <th>Position</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bookseries.each do |bookseries| %>
      <tr>
        <td><%= bookseries.book %></td>
        <td><%= bookseries.series %></td>
        <td><%= bookseries.position %></td>
        <td><%= link_to 'Show', bookseries %></td>
        <td><%= link_to 'Edit', edit_bookseries_path(bookseries) %></td>
        <td><%= link_to 'Destroy', bookseries, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Bookseries', new_bookseries_path %>
