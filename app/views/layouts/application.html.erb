<!DOCTYPE html>
<html>
  <head>
    <title>Zenith Ebooks</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <h1 style="align:center;">Zenith eBooks</h1>
  <nav class="navbar navbar-default">
  <div class="container-fluid">
	<ul class="nav navbar-nav>
		<li><%= link_to 'Home', root_path %></li>
		<% if session[:user_id] == nil %>
		<li><%= link_to 'Log In', login_path %></li>
		<li><%= link_to 'Register', new_user_path %></li>
		<% else %>
		<li><%= link_to 'My Profile', User.find(session[:user_id]) %></li>
		<li><%= link_to 'Publish', new_book_path %></li>
		<li><%= link_to 'Log Out', logout_path %></li>
		<% end %>
		<li><%= link_to 'Contact Us', contact_path %></li>
		<li><%= link_to 'About Us', about_path %></li>
		<li><%= link_to 'Disclaimer', disclaimer_path %></li>
	</ul>
	</div>
	</nav>
	<% @genres = Genre.all %>
<ul id="genres">
    <% @genres.each do |genre| %>
      <li>
        <%= link_to genre.name, genre %>
      </li>
    <% end %>
</ul>
    <%= yield %>
  </body>
</html>
