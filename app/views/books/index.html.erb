<p id="notice"><%= notice %></p>
<% if @books.present? %>
  <tbody>
    <% @books.each do |book| %>
	<% @genres = Bookgenre.where(book_id: book.id) %>
	<% @authors = Author.where(book_id: book.id) %>
		<%= render "book_row", book: book, order_item: @order_item %>

    <% end %>
<% else %>
  <p>No books found.</p>
<% end %>
