<p id="notice"><%= notice %></p>

<h1>My Cart</h1>
<% if @carts.count != 0 %>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @carts.each do |cart| %>
      <tr>
        <td><%= cart.book.title %></td>
		<td><%= cart.book.price %></td>
        <td><%= link_to 'Show', cart %></td>
        <td><%= link_to 'Destroy', cart, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Check Out', new_cart_path %>
<% else %>
<p>No items found.</p>
<% end %>